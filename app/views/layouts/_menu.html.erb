<div class="sticky">
	<nav class="top-bar">
		<ul class="title-area">
			<li class="name">
				<h1><a href="/">Spiderlist.org (alpha)</a></h1>
			</li>
			<!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
			<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
		</ul>
		<section class="top-bar-section">

			<ul class="right">
				<% if user_signed_in? %>
					<% if current_user.admin? %>
						<li><%= link_to "Admin Panel", rails_admin.dashboard_path %></li><li class="divider"></li>
					<% end %>

					<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li><li class="divider"></li>
					<li><%= link_to "Edit My Account", edit_user_registration_path %></li><li class="divider"></li>
					<li><%= link_to 'My Alerts', alerts_path %></li><li class="divider"></li>
				<% end %>
				<li class='social'><a target="_blank" href="https://twitter.com/spiderlist" class="webicon twitter">@spiderlist</a></li><li class="divider"></li>
				<li class="social"><a target="_blank" href="https://www.facebook.com/spiderlist" class="webicon facebook">Follow us on Facebook</a></li>
			</ul>
		</section>
	</nav>
</div>